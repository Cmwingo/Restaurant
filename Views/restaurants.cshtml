<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Restaurants</title>
  </head>
  <body>
    @if (@Model.Count == 0)
    {
      <p>No restaurants have been added yet.</p>
    }
    else
    {
      <h1>Restaurant List</h1>
      <ul>
        @foreach(var restaurant in Model)
        {
          <li>@restaurant.GetName()</li>
        }
      </ul>
      <form action="/restaurants/delete" method="post">
        <button type="submit">Clear all restaurants</button>
      </form>
    }
    <a href="/restaurants/new">Add a new restaurant</a>
    <p><a href="/">Return home</a></p>
  </body>
</html>
